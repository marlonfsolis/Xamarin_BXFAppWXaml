<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BXFAppWXaml.Views.MenuPage"
             Title="Menu">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="GO TO ABOUT TAB"
                Margin="5"
                Command="{Binding GotoAboutCommand}"></Button>            
            <Button Text="GO TO MODAL PAGE"
                Margin="5"
                x:Name="ModalPageBtn"
                Clicked="ModalPageBtn_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>